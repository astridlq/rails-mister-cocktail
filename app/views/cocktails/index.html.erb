<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://static.independent.co.uk/s3fs-public/thumbnails/image/2018/05/22/13/gin-cocktails.jpg?w968h681);">
  <div class="container">
    <h1><span class="banner-typed-text"></span></h1>
    <p class="btn btn-hp"><%= link_to '+ Cocktail', new_cocktail_path %></p>
  </div>
</div>

<% background_image = ['https://www.chowstatic.com/assets/models/promotions/photos/29495/original/Arnold-Palmer-lemonade-iced-tea-drink-recipe-chowhound.jpg',
  'https://boiremixologie.com/files/medias/_imageCarrousel/melondeau_sansalcool.jpg',
  'https://boiremixologie.com/files/medias/_imageCarrousel/Moscow-Mule.jpg',
  'https://cdn3.tmbi.com/toh/GoogleImages/Blue-Lagoon-Margaritas_exps47794_SD1785603D2_RMS.jpg',
  'https://www.seriouseats.com/images/2015/05/20150323-cocktails-vicky-wasik-margarita.jpg'] %>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="col-4">
      <% if cocktail.photo.url.nil? %>
        <% photo_url = background_image.sample %>
      <% else %>
        <% photo_url = cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>
      <% end %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= photo_url %>)">
        <%= link_to cocktail.name.capitalize, cocktail_path(cocktail) %>
        <!-- <p class="new-dose"><%= link_to '+ Add an ingredient', new_cocktail_dose_path(cocktail) %></p> -->
      </div>
    </div>
    <% end %>
  </div>
</div>

